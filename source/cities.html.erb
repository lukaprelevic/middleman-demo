<div class="container">
  <h1>You can find us in</h1>

  <div class="row">

    <% data.cities.each do |city| %>

      <div class="col-xs-12 col-sm-6 col-lg-3">
        <div class="card" style="background-image: url(https://kitt.lewagon.com/placeholder/cities/<%= city.name %>)">
          <h3><%= city.name.capitalize %></h3>
          <p><%= city.address %></p>
          <% if city.last_seats %>
            <span class="label label-warning">Last seats!</span>
          <% end %>
        </div>
      </div>

    <% end %>
  </div>


</div>
